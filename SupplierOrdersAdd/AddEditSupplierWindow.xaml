<Window x:Class="SupplierOrdersAdd.AddEditSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать поставщика" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <!-- Название -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Название:" Width="120" VerticalAlignment="Center" />
                <TextBox x:Name="SupplierNameTextBox" Width="250" />
            </StackPanel>

            <!-- Контактное лицо -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Контактное лицо:" Width="120" VerticalAlignment="Center" />
                <TextBox x:Name="ContactNameTextBox" Width="250" />
            </StackPanel>

            <!-- Телефон -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Телефон:" Width="120" VerticalAlignment="Center" />
                <TextBox x:Name="PhoneNumberTextBox" Width="250" />
            </StackPanel>

            <!-- Email -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Email:" Width="120" VerticalAlignment="Center" />
                <TextBox x:Name="EmailAddressTextBox" Width="250" />
            </StackPanel>

            <!-- Кнопка сохранения -->
            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Window>